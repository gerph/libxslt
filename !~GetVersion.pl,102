#! /usr/bin/perl

# Command:
#   <command to run, with spaces as *s> <varname>
#
$cmd= "\@." . shift;
$varname = shift;
$cmd=~ s/\*/ /;
$line=`$cmd`;
$line=~ /^[\@.A-Za-z]*?([A-Za-z]*)[:, ].*port ([0-9]*.[0-9]*) \((...) (..) (....)\)/s;

$day=$4+0;
if ($day<10)
{ 
  $day="0$day";
}
print "$1\t$2 ($day $3 $5)\n";
system "set $varname\$Version $2";
$ver=$2; $ver=~s/\.//;
system "set $varname\$FileVersion $ver";
